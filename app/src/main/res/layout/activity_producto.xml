<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProductoActivity" >

    <ImageView
        android:id="@+id/imageView141"
        android:layout_width="1900dp"
        android:layout_height="800dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.527"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/beatsdhead" />

    <ImageView
        android:id="@+id/imageView14"
        android:layout_width="38dp"
        android:layout_height="35dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="356dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/arrowleft" />

    <HorizontalScrollView
        android:layout_width="410dp"
        android:layout_height="315dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.891">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                style="@style/padding"
                android:layout_width="174dp"
                android:layout_height="267dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@color/blanco_humo"
                android:dividerPadding="14px"
                android:orientation="vertical"
                android:padding="14px"
                android:paddingRight="14px">

                <ImageView
                    android:id="@+id/imageView1011"
                    android:layout_width="162dp"
                    android:layout_height="175dp"
                    app:srcCompat="@drawable/beatscaja2" />

                <TextView
                    android:id="@+id/textView331"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Beats by Dr. Dre"
                    android:textColor="#000000"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/textView341"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="BEATS"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/textView25"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:layout_marginTop="20dp"
                    android:autoText="true"
                    android:text="$250"
                    android:textColor="#E307F3" />
            </LinearLayout>

            <LinearLayout
                style="@style/padding"
                android:layout_width="174dp"
                android:layout_height="267dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@color/blanco_humo"
                android:dividerPadding="14px"
                android:orientation="vertical"
                android:padding="14px"
                android:paddingLeft="14px">

                <ImageView
                    android:id="@+id/imageView17"
                    android:layout_width="162dp"
                    android:layout_height="175dp"
                    app:srcCompat="@drawable/beats3" />

                <TextView
                    android:id="@+id/textView26"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Beats By Dr. Dre 2"
                    android:textColor="#000000"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/textView27"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="BEATS"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/textView28"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:autoText="true"
                    android:text="$450"
                    android:textColor="#E307F3" />
            </LinearLayout>
        </LinearLayout>
    </HorizontalScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>